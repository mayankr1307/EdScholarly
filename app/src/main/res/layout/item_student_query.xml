<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    android:elevation="2dp">

    <TextView
        android:id="@+id/tv_student_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/student_email"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_teacher_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/teacher_email"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_query_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/query_date"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_query_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/query_time"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_query_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/query_message"
        android:textSize="14sp"
        android:paddingTop="8dp" />

</LinearLayout>
